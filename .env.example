# ============================================
# CONFIGURATION BASE DE DONNÉES
# ============================================

DB_HOST=localhost
DB_PORT=5432
DB_NAME=num_exam_db
DB_USER=postgres
DB_PASSWORD=votre_password_ici

# ============================================
# ENVIRONNEMENT
# ============================================

ENV=development
DEBUG=True

# ============================================
# LOGGING
# ============================================

LOG_LEVEL=INFO

# ============================================
# STREAMLIT
# ============================================

STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# ============================================
# HÉBERGEMENT (PRODUCTION)
# ============================================

# Neon.tech (PostgreSQL gratuit)
# PROD_DB_URL=postgresql://user:password@host.neon.tech/dbname

# ============================================
# SÉCURITÉ
# ============================================

SECRET_KEY=changez_cette_cle_secrete_en_production
SESSION_TIMEOUT=3600

# ============================================
# NOTES D'UTILISATION
